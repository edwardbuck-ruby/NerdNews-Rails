<%= simple_form_for [@story, @comment], :html => { :class => 'form-horizontal' } do |f| %>
  <% if current_user.nil? %>
    <%= f.input :name %>
    <%= f.input :email %>
  <% elsif ["edit", "update"].include?(params[:action]) %>
    <%= f.input :name, readonly: true %>
    <%= f.input :email, readonly: true %>
  <% else %>
    <%= f.input :name, readonly: true, input_html: {value: current_user.full_name} %>
    <%= f.input :email, readonly: true, input_html: {value: current_user.email} %>
    <%= f.input :user_id, as: :hidden, input_html: {value: current_user.id} %>
  <% end %>
  <%= f.input :content, input_html: {rows: 10} %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
