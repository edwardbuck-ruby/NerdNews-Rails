<%= simple_form_for [@story, @comment], :html => { :class => 'form-horizontal' } do |f| %>
  <% unless current_user %>
    <%= f.input :name %>
    <%= f.input :email %>
  <% else %>
    <%= f.input :name, disabled: true, input_html: {value: current_user.full_name} %>
    <%= f.input :email, disabled: true, input_html: {value: current_user.email} %>
  <% end %>
  <%= f.input :content, input_html: {rows: 10} %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
<% end %>
