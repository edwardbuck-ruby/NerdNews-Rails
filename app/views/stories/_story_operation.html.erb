<% if story.id %>
  <div class='row'>
    <div class='span1'>
      <div class='rate btn-group pull-right'>
        <% if turnoff_voting_button?(story) %>
          <span class='btn btn-success disabled'><%= story.positive_votes_count.to_farsi %> <i class='icon-thumbs-up'></i></span>
          <span class='btn btn-danger disabled'><i class='icon-thumbs-down'></i> <%= story.negative_votes_count.to_farsi %></span>
        <% else %>
          <button class="btn btn-success btn-thumbs-up" data-id='<%= story.id %>' id='btn-thumbs-up'><%= story.positive_votes_count.to_farsi %> <i class='icon-thumbs-up'></i></button>
          <button class="btn btn-danger btn-thumbs-down" data-id='<%= story.id %>' id='btn-thumbs-down'><i class='icon-thumbs-down'></i> <%= story.negative_votes_count.to_farsi %></button>
        <% end %>
      </div>
    </div>
    <div class='span5 thumbs-up-list' id='<%= story.id %>'>
      <ul>
        <% Rating.positive.each do |rating| %>
          <li class='icon-hand-left'>
            <%= link_to rating.name, votes_path(user_id: current_user, story_id: story.id, rating_id: rating, positive: true), method: :post %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class='span5 thumbs-down-list' id='<%= story.id %>'>
      <ul>
        <% Rating.negative.each do |rating| %>
          <li class='icon-hand-left'>
            <%= link_to rating.name, votes_path(user_id: current_user, story_id: story.id, rating_id: rating), method: :post %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class='pull-left'>
      <% if can? :update, story %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_story_path(story), :class => 'btn btn-mini' %>
      <% end %>
      <% if can? :destroy, story %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      story_path(story),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger'
                       %>
      <% end %>
      <% if (can? :publish, story) && !story.publish_date %>
        <%= link_to t('.publish', default: t('helpers.links.publish')), publish_story_path(story),
            class: "btn btn-mini btn-primary", method: :put %>
      <% end %>
    </div>
  </div>
<% end %>
