<% if story.id %>
  <div class='row'>
    <div class='span1'>
      <div id='voting-buttons-<%= story.id %>' class='rate btn-group pull-right' >
        
        <%= render 'stories/voting_buttons', story: story %>

      </div>
    </div>
    <div class='span5 thumbs-up-list' id='<%= story.id %>'>
      <ul>
        <% Rating.positive.each do |rating| %>
          <li class='icon-hand-left'>
            <%= link_to rating.name, story_votes_path(story, rating_id: rating, positive: true),
              method: :post, remote: true %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class='span5 thumbs-down-list' id='<%= story.id %>'>
      <ul>
        <% Rating.negative.each do |rating| %>
          <li class='icon-hand-left'>
            <%= link_to rating.name, story_votes_path(story, rating_id: rating), method: :post, remote: true %>
          </li>
        <% end %>
      </ul>
    </div>
    <div class='pull-left'>
      <% if can? :update, story %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_story_path(story), :class => 'btn btn-mini' %>
      <% end %>
      <% if can? :destroy, story %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      story_path(story),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger'
                       %>
      <% end %>
      <% if (can? :publish, story) && !story.publish_date %>
        <%= link_to t('.publish', default: t('helpers.links.publish')), publish_story_path(story),
            class: "btn btn-mini btn-primary", method: :put %>
      <% end %>
    </div>
  </div>
<% end %>
