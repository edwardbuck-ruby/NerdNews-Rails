<%= simple_form_for @rating, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <%= f.input :name,
              input_html: {class: "span6"} %>
  <%= f.input :weight,
              input_html: {class: "span6"} %>
  <%= f.input :rating_target,
    collection: [['stories', 'خبرها'],
                ['comments', 'کامنت‌ها']],
    label_method: :last,
    value_method: :first,
    as: :radio %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ratings_path, :class => 'btn' %>
  </div>
<% end %>