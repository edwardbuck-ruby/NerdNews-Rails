<% set_meta_tags  title: t('.title'),
                  noindex: true %>
<% content_for :page_header do %>
  <h1><%=t '.title' %></h1>
<% end %>

<%= simple_form_for @user, url: password_reset_path(params[:id]),
                    :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :password, :wrapper => :prepend do %>
    <span class="add-on"><i class="icon-lock"></i></span>
    <%= f.input_field :password %>
  <% end %>

  <%= f.input :password_confirmation, :wrapper => :prepend do %>
    <span class="add-on"><i class="icon-lock"></i></span>
    <%= f.input_field :password_confirmation %>
  <% end %>

  <div class="form-actions">
    <%= f.button :submit, t('.title'), :class => 'btn-primary' %>
  </div>

<% end %>
