<li class="span2">
  <div class="thumbnail">
    <%= image_tag thumbnail_url(tag), alt: tag.name %>
    <h4>
      <% if can? :destroy, Tag %>
        <%= check_box_tag "tags[]", tag.id, false, id: "tag_#{tag.id}" %>
      <% end %>
      <%= link_to tag.name.truncate(11), stories_path(tag: tag.name) %>
    </h4>

    <% if (can? :edit, Tag) or (can? :destroy, Tag) %>
    <p>
      <% if can? :edit, Tag %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_tag_path(tag), :class => 'btn btn-mini' %>
      <% end %>

      <% if can? :destroy, Tag %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  tag_path(tag),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                  :class => 'btn btn-mini btn-danger' %>
      <% end %>
    </p>
    <% end %>
  </div>
</li>
