<%= simple_form_for @tag, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name,
              input_html: {class: "span6"} %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tags_path, :class => 'btn' %>
  </div>
<% end %>