<table class="table table-striped">
  <tbody>
    <% favorites.each do |vote| %>
      <% if vote.voteable.present? %>
        <tr>
          <td>
            به
            <%= link_to story_path(vote.voteable) do %>
              <%= truncate(vote.voteable.title) %>
            <% end %>
            امتیاز <b> <%= vote.rating.name %> </b> را داد
          </td>
          <td title="تاریخ نظر دادن">
            <%= to_jalali(vote.created_at) %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= paginate favorites %>
