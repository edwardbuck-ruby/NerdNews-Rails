<%- model_class = @user.class -%>

<div class='row'>
  <div class='span3'>
    <%= image_tag avatar_url(@user, 256), class: 'img-polaroid' %>
    <div class='user info'>
      
      <div class='user user-name'>
        <p><strong><%= @user.full_name %></strong></p>
      </div>
      
      <div class='user user-assets'>
        <i class="icon-user"></i>
        <%= t('.registered_from') + time_ago_in_words(@user.created_at) + ' قبل'%></p>
        <i class="icon-th"></i>
        <%=t '.website', website: @user.website || t('.not_mentioned') %></p>
        <i class="icon-envelope"></i>
        <%= mail_to @user.email, nil, :replace_at => ' at ', replace_dot: ' dot ', encode: 'hex' %>
      </div>
      <% if can? :edit, @user %>
        <div class='user user-edit-button'>
          <%= link_to t('.edit'), edit_user_path(@user), class: 'btn btn-block' %>
        </div>
      <% end %>

      <div class='row'>
        <ul class='user user-rates'>
          <li class='span1 well well-small'>
            <span class='digit'><%= @user.user_rate.to_farsi %></span>
            <span><%=t '.points' %></span>
          </li>
          <li class='span1 well well-small'>
            <span class='digit'><%= @user.stories.approved.count.to_farsi %></span>
            <span><%=t '.posts' %></span>
          </li>
          <li class='span1 well well-small'>
            <span class='digit'><%= @user.comments.count.to_farsi %></span>
            <span><%=t '.comments' %></span>
          </li>
        </ul>
      </div>

      <div class='user user-tags'>
        <p><%=t '.favorite_tags' %></p>
      </div>
    </div>
  </div>

  <div class='span9'>
    <ul class="nav nav-tabs">
      <li class="<%= 'active' if current_page?(user_path(@user, render: 'posts')) %>">
        <%= link_to t('.posts'), user_path(@user, render: 'posts') %>
      </li>
      <li class="<%= 'active' if current_page?(user_path(@user, render: 'comments')) %>">
        <%= link_to t('.comments'), user_path(@user, render: 'comments') %>
      </li>
      <li class="<%= 'active' if current_page?(user_path(@user, render: 'favorites')) %>">
        <%= link_to t('.favorites'), user_path(@user, render: 'favorites') %>
      </li>
    </ul>

    <div class='user-activities'>
      <%= render_correct_partial %>
    </div>

  </div>
</div>