<table class="table table-striped">
  <tbody>
    <% user_stories.each do |user_story| %>
      <tr>
        <td>
          <i class='fa fa-book'></i>
          <%= link_to story_path(user_story) do %>
            <%= truncate user_story.title %>
          <% end %>
        </td>
        <td title="تاریخ انتشار">
          <%= to_jalali(user_story.publish_date) %>
        </td>
        <td title="تعداد دیدگاه‌ها">
          <i class='fa fa-comment'></i>
          <%= user_story.comments_count.to_farsi %>
        </td>
        <td title="میزان امتیاز">
          <i class='fa fa-plus'></i>
          <%= user_story.total_point.to_farsi %>
        </td>
        <td title="تعداد نظر مثبت">
          <i class='fa fa-thumbs-o-up'></i>
          <%= user_story.positive_votes_count.to_farsi %>
        </td>
        <td title="تعداد نظر منفی">
          <i class='fa fa-thumbs-o-down'></i>
          <%= user_story.negative_votes_count.to_farsi %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate user_stories %>
