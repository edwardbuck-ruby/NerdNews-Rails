  gem 'sunspot_solr' # optional pre-packaged Solr distribution for use in development
end

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'

end

group :test do
  gem 'capybara'
  gem 'guard-rspec'
  gem 'faker'
